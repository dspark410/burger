<div class="background">
  <h1 class="text-center mt-3 mb-5">BURGERS</h1>

  <h2 class="text-center mb-4">Make a Burger!</h2>
  <form class="create-form">

    <div class="form-group text-center">
      <label for="burg">Burger Name:</label>
      <input type="text" id="burg" name="name">
      <button type="submit">Add Burger</button>
    </div>


  </form>
  <div class="row mt-5">
    <div class="col-md-6">
      <h2 class="text-center">Burgers Made!</h2>

      <ul class="text-center">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2 class="text-center">Devoured Burgers!</h2>

      <ul class="text-center">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>